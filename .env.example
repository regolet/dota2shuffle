# Dota 2 Shuffle - Environment Configuration Example
# Copy this file to .env and fill in your values

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-this-in-production
FLASK_ENV=development
DEBUG=False

# Server Configuration
PORT=5000
HOST=0.0.0.0

# Database Configuration
# For local development (SQLite):
DATABASE_URL=sqlite:///dota2shuffle.db
# For production (PostgreSQL):
# DATABASE_URL=postgresql://user:password@hostname:5432/database

# Session Configuration
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# CSRF Configuration
WTF_CSRF_ENABLED=True

# SocketIO Configuration
SOCKETIO_CORS_ALLOWED_ORIGINS=*

# Sentry Error Tracking (Optional)
# Sign up at https://sentry.io to get a DSN
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# Cache Configuration
CACHE_TYPE=simple  # Options: simple, redis, memcached
CACHE_DEFAULT_TIMEOUT=300

# Game Configuration (Optional - defaults in config.py)
SHUFFLE_BALANCE_ITERATIONS=100

# Admin Configuration
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123  # CHANGE THIS IMMEDIATELY!

# Logging Configuration (Optional - defaults in config.py)
LOG_DIR=logs
LOG_FILE=dota2shuffle.log
ERROR_LOG_FILE=errors.log
